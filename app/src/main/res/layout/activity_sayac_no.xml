<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Activitys.SayacNo">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sayacimg"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_screens" />

        <RelativeLayout
            android:id="@+id/bolum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sayacimg"
            android:layout_marginTop="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button3">
            <TextView
                android:id="@+id/yazi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:textColor="#FF242132"
                android:fontFamily="@font/comfortaa"
                android:text="Sayaç numaranızı bu alana girerek bilgilerinizi almaya başlayabilirsiniz" />

            <EditText
                android:id="@+id/sayacId"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_below="@+id/yazi"
                android:background="@drawable/button"
                android:gravity="center"
                android:fontFamily="@font/comfortaa"
                android:hint="45XXXXX" />

            <TextView
                android:id="@+id/yazi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="12dp"
                android:layout_below="@id/sayacId"
                android:gravity="center"
                android:textColor="#FF242132"
                android:fontFamily="@font/comfortaa"
                android:text="Günlük ücret limiti belirleyerek kullanım takibinizi kontrol altında tutabilirsiniz" />
            <EditText
                android:id="@+id/limit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_below="@+id/yazi2"
                android:background="@drawable/button"
                android:gravity="center"
                android:fontFamily="@font/comfortaa"
                android:hint="100 ₺" />
            <Button
                android:id="@+id/sayacNoButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="28dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:layout_below="@+id/limit"
                android:background="@drawable/button2"
                android:gravity="center"
                android:fontFamily="@font/comfortaa"
                android:text="Takibi Başlat"
                android:textColor="#fff"/>
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>